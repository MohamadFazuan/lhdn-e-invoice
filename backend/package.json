{
  "name": "lhdn-einvoice",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev --local",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "db:generate": "drizzle-kit generate",
    "db:generate:mysql": "drizzle-kit generate --config drizzle.config.mysql.ts",
    "db:migrate:local": "wrangler d1 migrations apply lhdn-einvoice-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply lhdn-einvoice-db",
    "db:migrate:mysql": "drizzle-kit migrate --config drizzle.config.mysql.ts",
    "db:seed": "wrangler d1 execute lhdn-einvoice-db --local --file=./scripts/seed.sql",
    "db:studio": "drizzle-kit studio --config drizzle.config.local.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "aws4fetch": "^1.0.20",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.0",
    "jose": "^5.9.6",
    "pdf-lib": "^1.17.1",
    "pdfjs-serverless": "^0.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.6.2",
    "drizzle-kit": "^0.28.0",
    "typescript": "^5.7.2",
    "wrangler": "^3.91.0"
  }
}
